  <thead>
      <tr>
        <th>Ville</th>
        <th>Gossips</th>
        <th colspan="3"></th>
        <hr>
      </tr>
    </thead>
  <tbody>
      <% @city.each do |city| %>
        <tr>
        <td><%= city.name %></td> 
          <% @user_city = User.where(city_id: city.id) %>
          
